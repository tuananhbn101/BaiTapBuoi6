<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/titel_backgroud"
        android:layout_height="@dimen/_50sdp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Food order"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_20sdp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btnCart"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/xedayhangsieuthu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp"/>
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/backgroud_so_luong"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome KhoaHA"
            android:textSize="@dimen/_20sdp"/>

        <ListView
            android:id="@+id/lvFood"
            android:background="@drawable/border_listview"
            android:layout_width="wrap_content"
            android:layout_height="376dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:dividerHeight="-1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price"
                android:textSize="@dimen/_12sdp"/>
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0$"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/btn_order"
            android:id="@+id/btnOrder"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="@dimen/_50sdp">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Order"
               android:textSize="@dimen/_15sdp"
               android:fontFamily="sans-serif-medium"
               android:textColor="@color/black"
               android:gravity="center"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvThanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you! Your order is sent to restaurant"
            android:textSize="@dimen/_10sdp"
            android:visibility="invisible"
            android:gravity="center"
            android:layout_marginTop="@dimen/_25sdp"/>
    </LinearLayout>
</LinearLayout>